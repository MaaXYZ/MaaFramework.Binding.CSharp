{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj",
          ],
          "exclude": [
            "**/*Test*.csproj"
          ]
        }
      ],
      "dest": "api",
      "outputFormat": "apiPage",
      "memberLayout": "separatePages",
      "includeExplicitInterfaceImplementations": false,
      "disableGitFeatures": true,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "globalMetadata": {
      "_appName": "MaaFramework.Binding.CSharp",
      "_appTitle": "MaaFramework CSharp Binding",
      "_appLogoPath": "images/logo.png",
      "_appFaviconPath": "images/favicon.ico",
      "_enableSearch": true,
      "_enableNewTab": true,
      "pdf": false
    },
    "template": ["default", "modern", "template"],
    "xrefService": ["https://xref.docs.microsoft.com/query?uid={uid}"],
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site"
  }
}